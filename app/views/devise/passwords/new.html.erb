<fieldset class="devise_form">
  <legend>Forgot your password?</legend>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <label class="fa fa-user devise_input_label" aria-hidden="true"><%= f.email_field :email, autofocus: true, :placeholder => "E-mail" %></label>
    <%= f.submit "Send", :class => "submit_button forget_button" %>
  <% end %>
  <%= render "devise/shared/links" %>
</fieldset>